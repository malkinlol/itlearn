        margin-top: -1px;
    ">
    <div>
        <div class="img-container" style="height:200px">
            @if (!string.IsNullOrEmpty(Model.Avatar))
            {
                <img src="@Url.Content(Model.Avatar)" style="width: 130px; height: 130px;" />
            }
