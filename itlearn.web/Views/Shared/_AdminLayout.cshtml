                        <li class="nav-item has-treeview ">

                        </li>
                        <li class="nav-item">

                        <li class="nav-header">ОСНОВНАЯ ИНФОРМАЦИЯ</li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <ion-icon name="grid-outline" class="nav-icon far "></ion-icon>
                                <p>
                                    Контент
                                    <ion-icon name="chevron-down-outline" class="right"></ion-icon>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/admin/language" class="nav-link">
                                        <ion-icon name="desktop-outline" class="nav-icon far "></ion-icon>
                                        <p>ЯП</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/admin/chapter" class="nav-link">
                                        <ion-icon name="book-outline" class="nav-icon far "></ion-icon>
                                        <p>Главы</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/admin/theme" class="nav-link">
                                        <ion-icon name="bookmarks-outline" class="nav-icon far "></ion-icon>
                                        <p>Темы</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/admin/test" class="nav-link">
                                        <ion-icon name="checkbox-outline" class="nav-icon far "></ion-icon>
                                        <p>Тесты</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/admin/question" class="nav-link">
                                        <ion-icon name="help-circle-outline" class="nav-icon far "></ion-icon>
                                        <p>Вопросы</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/admin/answer" class="nav-link">
