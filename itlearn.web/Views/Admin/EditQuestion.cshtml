@model QuestionVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <h1>Создание</h1>
            <hr />

            @if (!string.IsNullOrEmpty(Model.Avatar))
            {
                <div class="mt-5 mb-5" style="height: 400px; width: 400px">
                    <img class="img-fluid" src="@Url.Content(Model.Avatar)" />
                </div>
                <hr />

            }

            @using (Html.BeginForm("EditQuestion", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input type="hidden" name="QuestionId" value="@Model.QuestionId" />
                <input type="hidden" name="TestId" value="@Model.TestId" />

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><b>Вопрос</b></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="SomeQuestion" value="@Model.SomeQuestion">
                        @Html.ValidationMessageFor(model => model.SomeQuestion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputAvatar" class="col-sm-2 col-form-label">Аватар</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" id="inputAvatar" name="uploadedFile">
                    </div>
                </div>
                <input type="submit" class="btn btn-outline-success" value="Создать" />

            }
        </div>
    </section>
</div>
