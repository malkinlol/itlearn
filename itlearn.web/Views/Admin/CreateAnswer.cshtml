@model AnswerVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <h1>Создание</h1>
            <hr />
            @using (Html.BeginForm("CreateAnswer", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <input type="hidden" name="QuestionId" value="@Model.QuestionId" />

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><b>Ответ</b></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="SomeAnswer" value="@Model.SomeAnswer">
                        @Html.ValidationMessageFor(model => model.SomeAnswer, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><b>Тип</b></label>
                    <div class="col-sm-10">
                        <select class="form-control" name="IsRight">
                            <option value="true">Правильный</option>
                            <option value="false">Неправильный</option>
                        </select>
                    </div>
                </div>

                <input type="submit" class="btn btn-outline-success" value="Создать" />
            }
        </div>
    </section>
</div>
